	<fontPath>./_art/comic.ttf</fontPath>
	<fontSize>0.024</fontSize>
	<size>0.22 0.01</size>
</text>

<text name="md_developer, md_players, md_publisher, md_genre, md_playcount">
	<color>232323DD</color>
	<forceUppercase>1</forceUppercase>
	<fontPath>./_art/comic.ttf</fontPath>
	<fontSize>0.020</fontSize>
	<size>0.18 0.02</size>
</text>
	
<datetime name="md_releasedate, md_lastplayed">
